{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
    <div class="container pt-5">
        <div class="row">
        {% for post in posts %}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ post.title }}</h5>
                    <div class="card-content">{{ post.description }}</div>
                </div>
            </div>
        </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
